
<p id="notice"></p>
<div class ="container px-5 px-sm-0">
<div class ="row">
<div class ="col-md-3">
 <%= render 'users/list',user:@user %>
<h2 class="mt-3">New book</h2>
<%= form_with model:@book,local:true do |f| %>
<% if @book.errors.any? %>

   <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
  <ul>
 <%= @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
 <% end %>

<div class="form-group">
 <label for="book_title">Title</label>

 <p><%= f.text_field :title %></p>
</div>

<div class="form-group">
 <label for="book_opinion">Opinion</label>
 <p><%= f.text_area :body %></p>
</div>
<div class="form-group btn btn-success" >
 <%= f.submit 'Create Book',class:'btn btn-sm btn-success' %>
</div>
<% end %>
</div>


<div class ="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table">

 <tbody>


    <tr>

     <td><%= link_to user_path(@book.user) do %>
     <%= image_tag @book.user.get_profile_image(100,100) %><br>
     <% end %>
     <%= link_to @book.user.name,user_path(@book.user) %>
     </td>

    <td><%= link_to @book.title,book_path(@book.id) %></td>
    <td><%= @book.body %></td>
   <% if @book.user == current_user %>
    <td><%= link_to 'Edit',edit_book_path(@book), class:'btn btn-sm btn-success' %></td>
    <td><%= link_to "Destroy",book_path(@book.id),class:"btn btn-sm btn-danger",method: :delete %></td>
   <% end %>
    </tr>

  </tbody>
 </table>
</div>
</div>
</div>