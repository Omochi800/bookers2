<h2 class="mt-3">New book</h2>
<%= form_with model:@book do |f| %>

<div class="form-group">
 <label for="book_title">Title</label>

 <p><%= f.text_field :title %></p>
</div>

<div class="form-group">
 <label for="book_opinion">Opinion</label>
 <p><%= f.text_area :body %></p>
</div>
<div class="form-group btn btn-success" >
 <%= f.submit 'Create Book',class:'btn btn-sm btn-success' %>
</div> 
<% end %>
<div class ="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table">

 <tbody>


    <tr>

     <td><%= link_to user_path(@book.user) do %>
     <%= image_tag @book.user.get_profile_image(100,100) %><br>
     <% end %>
     <%= link_to @book.user.name,user_path(@book.user) %>
     </td>
    
    <td><%= link_to @book.title,edit_book_path(@book.id) %></td>
    <td><%= @book.body %></td>
    
    <td><%= link_to "Edit",edit_book_path(@book.id), class:'btn btn-sm btn-success' %></td>
    <td><a data-confirm ="本当に削除しますか？" class ="btn btn-sm btn-danger book_path" rel ="nofollow" data-method ="delete" href ="books/id">Destroy</a></td>
   
    </tr>
    


  </tbody>
 </table>
</div>