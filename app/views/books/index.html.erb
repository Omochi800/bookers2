

<div class="col-md-8 offset-md-1">
 <h2>Books</h2>
 <table class="table table-hover table-inverse">
  <thead>
   <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>

   <% @books.each do |book| %>
   <tr>
    <%= link_to users_path do %>
     <%= image_tag @book.user.get_profile_image(100,100) %>
     <% end %>

    <td><%= link_to @book.title,edit_book_path(@book.id) %></td>
    <td><%= @book.body %></td>
   </tr>

   <% end %>
  </tbody>

 </table>
</div>





